  "shortcuts": [
    {
      "name": "Create Class",
      "short_name": "New Class",
      "description": "Quickly create a new attendance session",
      "url": "/create",
      "icons": [
        {
          "src": "/images/shortcut-create.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Join Session",
      "short_name": "Join",
      "description": "Join an attendance session",
      "url": "/join",
      "icons": [
        {
          "src": "/images/shortcut-join.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Monitor",
      "description": "View live attendance dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/images/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-handler",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "attendance",
      "url": "/join/%s"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://attendance.school.edu/app"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}