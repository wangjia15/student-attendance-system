# Application Settings
APP_NAME="Student Attendance System"
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Security Settings
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://attendance.school.edu

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./attendance.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/attendance_db
DATABASE_ECHO=false

# Redis Settings (optional for caching)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Application URLs
BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# QR Code Settings
QR_CODE_SIZE=10
QR_CODE_BORDER=4

# Encryption Settings
ENCRYPTION_KEY=your-fernet-encryption-key-here
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# SIS (Student Information System) Integration Settings
SIS_ENABLED=false
SIS_DEFAULT_PROVIDER=powerschool
SIS_SYNC_INTERVAL_MINUTES=60
SIS_MAX_RETRIES=3
SIS_REQUEST_TIMEOUT=30
SIS_RATE_LIMIT_PER_MINUTE=100

# PowerSchool Integration
POWERSCHOOL_CLIENT_ID=your-powerschool-client-id
POWERSCHOOL_CLIENT_SECRET=your-powerschool-client-secret
POWERSCHOOL_BASE_URL=https://your-district.powerschool.com
POWERSCHOOL_REDIRECT_URI=http://localhost:8000/api/v1/sis/callback
POWERSCHOOL_SCOPES=read_students,read_enrollments

# Infinite Campus Integration
INFINITE_CAMPUS_CLIENT_ID=your-infinite-campus-client-id
INFINITE_CAMPUS_CLIENT_SECRET=your-infinite-campus-client-secret
INFINITE_CAMPUS_BASE_URL=https://your-district.infinitecampus.org
INFINITE_CAMPUS_REDIRECT_URI=http://localhost:8000/api/v1/sis/callback
INFINITE_CAMPUS_SCOPES=student.read,enrollment.read

# Skyward Integration
SKYWARD_CLIENT_ID=your-skyward-client-id
SKYWARD_CLIENT_SECRET=your-skyward-client-secret
SKYWARD_BASE_URL=https://your-district.skyward.com
SKYWARD_REDIRECT_URI=http://localhost:8000/api/v1/sis/callback
SKYWARD_SCOPES=students:read,enrollments:read

# SIS Sync Conflict Resolution
SIS_AUTO_RESOLVE_CONFLICTS=false
SIS_PREFER_SIS_DATA=true
SIS_BACKUP_LOCAL_DATA=true